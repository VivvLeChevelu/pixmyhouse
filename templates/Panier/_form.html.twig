    <div class="row">
        <div class="col-md-6">
           <fieldset>
                <legend>{{ 'commande.infos'|trans|parse_icons }}</legend> 
                    <div class="card text-center font-weight-bold">
                        <div class="card-header ">
                            <strong> Somme totale: </strong>
                        </div>

                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p> {{commande.montant}} euros</p>                        
                            </blockquote>
                        </div>
                    </div>
            </fieldset> 
        </div>
        <div class="col-md-6">
             <fieldset>
                <legend>{{ 'commande.details'|trans|parse_icons }}</legend>
                <table class="table table-dark table-striped  table-sm  table-responsive-md">
                    <thead class="thead-light text-center">
                        <tr class="text-center">
                            <th>Id</th>
                            <th>Quantite</th>
                            <th>Prix</th>
                            <th>Oeuvre</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for detail in commande.detailCommandes %}
                            <tr class="text-center">
                                <td> {{ detail.id }}</td>
                                <td>{{ detail.quantite }}</td>
                                <td>{{ detail.prix }}</td>
                                <td>{{ detail.oeuvres }} </td>
                            </tr>
                        {% endfor %} 
                    </tbody>
                </table>
            </fieldset>
        </div>
</div>

