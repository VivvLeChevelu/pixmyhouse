{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des oeuvres{% endblock %}

{% block body %}
    <h1>Liste des oeuvres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Créateur</th>
                <th>Categorie</th>
                <th>Largeur</th>
                <th>Hauteur</th>
                <th>Tableau</th>
                <th>Status</th>
                <th>actions</th>
                <th>activation</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvre in oeuvres %}
            <tr class="row-oeuvre">
                <td class="oeuvre-id" data="{{ oeuvre.id }}" index="{{ loop.index0 }}">{{ oeuvre.id }}</td>
                <td>{{ oeuvre.nom }}</td>
                <td>{{ oeuvre.user }}</td>
                <td>{{ oeuvre.categorie }}</td>
                <td class="oeuvre-taillex" data="{{ oeuvre.largeur }}">{{ oeuvre.largeur }}</td>
                <td class="oeuvre-tailley" data="{{ oeuvre.hauteur }}">{{ oeuvre.hauteur }}</td>
                <td class="oeuvre-img" data="{{ oeuvre.tableau }}">  <div class='main-editor_miniature'>
                            <div class="post_cont_miniature">
                                <!-- <div class="post_it"></div> -->
                                <!-- Affichage des Post-it -->
                                <!-- Les post-it font 50px/50px -->
                            </div>                    
                      </div></td>
                <td class="active" data="{{oeuvre.status}}"></td>
                <td>
                    <a href="{{ path('admin_oeuvre_edit', {'id': oeuvre.id}) }}"><i class="fa fa-edit"></i></a>
                </td>

                <td>
                    <a class="activation-btn" href="{{ path('admin_oeuvre_activation', {'id': oeuvre.id}) }}"><i class="fa fa-power-off text-center"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_oeuvre_new') }}">Nouvelle Oeuvre</a>
    <br>
    <a href="{{ path('adminindex') }}" class="btn btn-primary mt-2 mb-2">Retour à l'administration</a>
{% endblock %}