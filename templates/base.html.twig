                        <h5>Vivien MICHOT</i></h5>
                        <h6></i> mvicorp@hotmail.fr</h6>
                        <h5>Léopold SCOMAZZON</h5>
                        <h6> leo2.scomazon@gmail.fr</h6>
                        <h5>Florian ANTONIO</h5>
                        <h6> florian.antonio@laposte.net</h6>
                        </div>
                    </div>

                    <div class="fleche">
                        <img src="{{ asset('images/Menu/fleche.png') }}" alt="Flèche">
                    </div>
                    <p>Copyrigth - wf3 - group4 -PixMyHouse</p>
                </div>
            </footer>
            {% endblock %}
        {% endblock %}

        <script src="{{ asset('build/js/app.js') }}"></script>
        {{ tinymce_init() }}
        {% block javascripts %}{% endblock %}
        </div>
        
    </body>
</html>
