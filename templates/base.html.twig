<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}" />
        <link rel="stylesheet" href="{{ asset('build/css/index.css') }}" />

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show">
                    {{ message|raw }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        
        {% block main_content %}
    
                {% block menu %}
                <div class="menuAdmin">
                    {{ knp_menu_render('main') }}
                    {{ knp_menu_render('administrateur' , {'style':'horizontal-right'}) }}
                    {{ knp_menu_render('user' , {'style':'horizontal-right'})}}   
                </div>                 
                {% endblock %}
  

            {% block header %}   
                <header>
                <div class="header">
                    <div class="headerTop">

                    </div>
                    <div class="headerFoot">
                        <a href="/register">Inscription</a>
                        <a href="/login">Connexion</a>
                    </div>
                </div>
                <a href="/">
                    <div class="logo">
                    </div>
                </a>
                    <div class="siteTitle">
                        <h1>Pix my House</h1>
                    </div>
                </header>
            {% endblock %}
            {% block body %}{% endblock %}
            {% block footer %}   
            <footer>
           

            <div class="logoCentre">
            
            </div>
